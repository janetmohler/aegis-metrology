<div class="container col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3">
  <div class="panel panel-primary">
    <!-- Default panel contents -->
    <div class="panel-heading">
      <h3 class="panel-title">Welcome, <%= @user.email %></h3>
    </div>
    <!-- View for admin -->
    <% if current_user.admin? %>
      <div class="panel-body">
        <%= link_to "Add Aegis Representative", new_representative_path %>
      </div>

      <!-- Table -->
      <div class="table-responsive">
      <table class="table table-bordered">
        <tr>
          <th>#</th>
          <th>Date</th>
          <th>Name</th>
          <th>Company</th>
          <th>Project</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
        <% @user.surveys.each do |survey| %>
        <tr>
          <td><%= survey.id %></td>
          <td><%= survey.date %></td>
          <td><%= survey.full_name %></td>
          <td><%= survey.company %></td>
          <td><%= survey.project %></td>
          <td><%= link_to 'Edit', edit_survey_path(survey), class: 'btn btn-primary' %></td>
          <td><%= link_to 'Delete', survey_path(survey), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'btn btn-danger' %></td>
        </tr>
        <% end %>  
      </table>
      </div>
    <!-- View for regular user -->
    <% else %>
      <div class="panel-body">
        <%= link_to "New Customer Satisfaction Survey", new_survey_path %> 
      </div>

      <!-- Table -->
      <div class="table-responsive">
      <table class="table table-bordered">
        <tr>
          <th>#</th>
          <th>Date</th>
          <th>Project</th>
          <th>Edit</th>
        </tr>
        <% @user.surveys.each do |survey| %>
        <tr>
          <td><%= survey.id %></td>
          <td><%= survey.date %></td>
          <td><%= survey.project %></td>
          <td><%= link_to 'Edit', edit_survey_path(survey), class: 'btn btn-primary' %></td>
        </tr>
        <% end %> 
      </table>
      </div>
    <% end %>  
  </div>
</div>